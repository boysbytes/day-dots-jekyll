---
layout: null
permalink: /feed.xml
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <atom:link href="{{ '/feed.xml' | absolute_url }}" rel="self" type="application/rss+xml"/>
    <title>{{ site.title | xml_escape }}</title>
    <link>{{ site.url }}{{ site.baseurl }}</link>
    <description>{{ site.description | xml_escape }}</description>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
    
    {% assign days = site.data.days %}
    {% for day in days %}
      <item>
        <title>{{ day.title | xml_escape }}</title>
        <link>{{ site.url }}{{ site.baseurl }}/#{{ day.date }}</link>
        <guid>{{ site.url }}{{ site.baseurl }}/#{{ day.date }}</guid>
        <pubDate>{{ day.date | date_to_rfc822 }}</pubDate>
        <description>
          {{ day.content | markdownify | strip_html | xml_escape }}
          {% if day.images %}
            Images: {% for img in day.images %}{{ img }}{% unless forloop.last %}, {% endunless %}{% endfor %}
          {% endif %}
        </description>
      </item>
    {% endfor %}
  </channel>
</rss>
